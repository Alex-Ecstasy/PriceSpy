@model Shipper
@{
    //int i = 0;
}

<div class="accordion-item">
    <h2 class="accordion-header" id="panelsStayOpen-headingOne">
        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                data-bs-target="#panelsStayOpen-collapse@(Shipper.IndexForAccordion)" aria-expanded="true" style="padding-left: 12px;padding: 7px;"
                aria-controls="panelsStayOpen-collapseOne">
            @Model.Name: @Model.SelectedElementsCount
        </button>
    </h2>
    <div id="panelsStayOpen-collapse@(Shipper.IndexForAccordion++)" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
        @foreach (var item in Model.SelectedElements)
        {
            @await Html.PartialAsync("Element", item)
        }
    </div>
</div>