@model Card
@{
    string price = string.Format("{0:f2}", @Model.Price);
}
<div class="card" style="width: 280px;">
    <img src="@Url.Content(Model.Picture)" alt="" style="height:200px; object-fit:contain">
    <div class="card-body">
        <h6 class="card-text">@Model.CatNumber</h6>
        @if (@Model.IsAvailable == true)
        {
            <ul class="list-group list-group-horizontal">
                <li class="list-group-item" style="padding: 0px; border: 0px">
                    <a class="btn btn-primary" href="@(Model.UrlPrefix)@(Model.CardUrl)">@(price) BYN</a>
                </li>
                <li>
                    <ul class="list-group list-group-flush" style="font-size: 12px;">
                        <li>Актуально</li>
                        <li>@Model.actualPriceDb</li>
                    </ul>
                </li>
            </ul>
            <h6 class="card-text">@Model.Status</h6>
        }
        else
        {
            <a class="btn btn-outline-danger" style="padding: 0,375rem 4rem; display:table;" href="@(Model.UrlPrefix)@(Model.CardUrl)">@(Model.Price) BYN</a>
            <h7 class="card-text">@Model.Status</h7>
        }
        <p class="card-title">@Model.Name</p>
    </div>
</div>