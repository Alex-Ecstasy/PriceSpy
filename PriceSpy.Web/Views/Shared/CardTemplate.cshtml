@model CardTemplate

<div class="card" style="width: 280px;">
    <img src="@Model.Picture" alt="" style="height:200px; object-fit:contain">
    <div class="card-body">
        <h6 class="card-text">@Model.CatNumber</h6>
        @if (@Model.IsAvailable == true)
        {
            <a class="btn btn-primary" href="@(Model.UrlPrefix)@(Model.CardUrl)">@(Model.Price) BYN</a>
            <h6 class="card-text">@Model.Status</h6>
        }
        else
        {
            <a class="btn btn-outline-danger" style="padding: 0,375rem 4rem; display:table;" href="@(Model.UrlPrefix)@(Model.CardUrl)">@(Model.Price) BYN</a>
            <h7 class="card-text">@Model.Status</h7>
        }
        <p class="card-title">@Model.Name</p>
    </div>
</div>