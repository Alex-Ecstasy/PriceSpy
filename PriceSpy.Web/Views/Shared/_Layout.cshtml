<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PriceSpy.Web</title>
    <Style>
        .img {
            object-fit: cover;
            width: 100%;
            height: 200px;
        }
        img:after{
                content: url("SadClient.jpg");
        }

        .offcanvas.show {
            width: 45%;
        }
        .offcanvas-end {
            width: 45%;
        }
    </Style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PriceSpy.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark fixed-top">
            <div class="container-fluid" >
                <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="flex-direction: revert">
                    <li class="nav-item" style="padding-top: 2px;">
                    <a class="navbar-brand" href="#">Результаты по запросу:</a>
                </li>
                <li class="nav-item">
                        <input id="search-box" class="form-control" value="@SampleViewModel.Search" type="text" style="padding: 5px">
                </li>
                <li class="nav-item">
                    <button id="search-button" type="button" class="btn btn-outline-light">Искать</button>
                </li>
                <li class="nav-item">
                        <div class="col-auto" style="width: 75px">
                            <input type="text" id="rate" class="form-control" value="@SampleViewModel.Rate">
                        </div>
                </li>
                </ul>
                <span class="navbar-text" style="padding-right: inherit">
                    @SampleViewModel.TotalCount
                </span>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

    </header>
    
    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PriceSpy.Web - <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a asp-area="" asp-controller="Home" asp-action="Prices">Prices</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Fetch.js" ></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>